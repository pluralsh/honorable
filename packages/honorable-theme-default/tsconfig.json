{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "target": "ES6",
    "module": "ES6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@assets/*": ["./assets/*"],
      "@src/*": ["./src/*"],
      "@pluralsh/honorable": ["node_modules/@pluralsh/honorable"],
      "@pluralsh/honorable/*": ["node_modules/@pluralsh/honorable/*"]
    },
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": ["src/**/*"]
}
